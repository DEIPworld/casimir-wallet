{
  "name": "deip-wallet",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:testnet": "npm run build -- --mode development",
    "preview": "vite preview --port 5050",
    "test:unit": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chenfengyuan/vue-qrcode": "^2.0.0",
    "@mdi/font": "^6.6.96",
    "@mdi/js": "^6.6.96",
    "@polkadot/api": "^8.0.2",
    "@polkadot/ui-keyring": "^2.0.1",
    "bignumber.js": "^9.0.2",
    "cryptext": "^1.1.4",
    "date-fns": "^2.28.0",
    "pinia": "^2.0.13",
    "pinia-plugin-persistedstate-2": "^1.0.0",
    "qrcode": "^1.5.0",
    "string-crypto": "^2.0.2",
    "tiny-emitter": "^2.1.0",
    "vee-validate": "^4.5.11",
    "vue": "^3.2.33",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.0.14",
    "vuetify": "^3.0.0-beta.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@deip/eslint-config": "^1.375.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.25",
    "@types/rollup-plugin-node-builtins": "^2.1.2",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/tsconfig": "^0.1.3",
    "@vuetify/vite-plugin": "^1.0.0-alpha.10",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.4.0",
    "rollup-plugin-polyfill-node": "^0.9.0",
    "sass": "^1.50.1",
    "typescript": "~4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.9.3",
    "vue-tsc": "^0.34.9"
  },
  "lint-staged": {
    "*.{vue,js,jsx,ts,tsx}": "eslint --fix"
  },
  "engines": {
    "node": "^14.15.0",
    "npm": "^6.0.0"
  }
}
